{
  "name": "@cmi-dair/brainviewer",
  "displayName": "brainviewer",
  "description": "Brain viewer",
  "version": "0.1.5",
  "main": "./dist/brainviewer.umd.cjs",
  "module": "./dist/brainviewer.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/brainviewer.js",
      "require": "./dist/brainviewer.umd.cjs"
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "package.json"
  ],
  "private": false,
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/childmindresearch/brainviewer.git"
  },
  "type": "module",
  "bugs": {
    "url": "https://github.com/childmindresearch/brainviewer/issues"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && vite build --config vite.config.bundle.js --emptyOutDir false",
    "lint": "eslint src --ext ts",
    "test": "vitest"
  },
  "dependencies": {
    "camera-controls": "^3.1.0",
    "d3": "^7.9.0",
    "d3-scale-chromatic": "^3.1.0",
    "three": "0.180.0"
  },
  "devDependencies": {
    "@types/d3": "^7.4.3",
    "@types/d3-scale-chromatic": "^3.1.0",
    "@types/node": "^24.3.1",
    "@types/three": "^0.180.0",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^8.45.0",
    "jsdom": "^26.1.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.5",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  }
